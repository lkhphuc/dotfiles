{
    "coc.preferences.extensionUpdateCheck": "daily",
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,

    "suggest.enablePreview": true,
    "suggest.triggerAfterInsertEnter": true,
    "suggest.acceptSuggestionOnCommitCharacter": true,

    "snippets.enableStatusItem": true,

    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": ["--max-line-length=88, --extend-ignore=E203"],
    "python.linting.mypyEnabled": true,

    "tabnine.priority": 10,

    "languageserver": {
      "fortran": {
        "command": "fortls",
        "filetypes": ["fortran", "f90", "f95"],
        "args": ["--lowercase_intrinsics"],
        "rootPatterns": [".fortls", ".git/"]
      }
    },

    "explorer.width": 30,
    "explorer.position": "right",
    "explorer.icon.enableNerdfont": true,
    "explorer.icon.enableVimDevicons": true
}
