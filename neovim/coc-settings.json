{
    "coc.preferences.currentFunctionSymbolAutoUpdate": true,

    "suggest.triggerAfterInsertEnter": true,
    "suggest.acceptSuggestionOnCommitCharacter": true,

    "snippets.enableStatusItem": true,

    "python.jediEnabled": false,
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": ["--ignore=E501"],
    "python.linting.mypyEnabled": true,
    "python.formatting.provider": "black",


    "git.removedSign.hlGroup": "CocErrorSign",
    "git.addedSign.hlGroup": "CocInfoSign",
    "git.changedSign.hlGroup": "CocWarningSign",
    "git.topRemovedSign.hlGroup": "CocErrorSign",
    "git.changeRemovedSign.hlGroup":"CocWarningSign",

    "explorer.width": 30,
    "explorer.position": "right",
    "explorer.icon.enableNerdfont": true,
    "explorer.icon.enableVimDevicons": true,
    "coc.preferences.extensionUpdateCheck": "daily"
}
