{
    "suggest.triggerAfterInsertEnter": true,
    "suggest.acceptSuggestionOnCommitCharacter": true,
    "diagnostic.checkCurrentLine": true,

    "python.jediEnabled": false,
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=88",
        "--ignore=E203,W503,E722,E302,E501"
    ],
    "python.formatting.provider": "black",

    "ccls.completion.enableSnippetInsertion": true,

    "languageserver": {
        "ccls": {
           "command": "ccls",
           "filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
           "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
           "initializationOptions": {
               "cache": {
                   "directory": "/tmp/ccls"
               }
           }
        }
    },
    
    "git.removedSign.hlGroup": "CocErrorSign",
    "git.addedSign.hlGroup": "CocInfoSign",
    "git.changedSign.hlGroup": "CocWarningSign",
    "git.topRemovedSign.hlGroup": "CocErrorSign",
    "git.changeRemovedSign.hlGroup":"CocWarningSign",

    "explorer.width": 30,
    "explorer.position": "right",
    "explorer.icon.enableNerdfont": true,
    "explorer.icon.enableVimDevions": true,
}
